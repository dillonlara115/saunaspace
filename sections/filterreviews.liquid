<script>

  $(".product-info-tab").on("click", function() {
    $(".product-info-tab").removeClass("product-info-tab-on");
    $(this).addClass("product-info-tab-on");
    $(".product-info-details").addClass("hideMe");
    var whichTab = $(this).attr("data-tab");
    $("#pid-" + whichTab).removeClass("hideMe");
  });
</script>
{% schema %}
  {
    "name": "Filtered Reviews",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "What the Experts are Saying",
        "label": "Filtered Reviews"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "review",
        "limit": 15,
        "settings": [
          {
            "type": "image_picker",
            "id": "photo",
            "label": "Customer Photo"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Customer Name"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Customer Title"
          },
          {
            "type": "textarea",
            "id": "quote",
            "label": "Review"
          }, 
          {
            "type": "text",
            "id": "url_link",
            "label": "3rd Party URL Link"
          },
           {
            "type": "text",
            "id": "URL_Link_Label",
            "label": "3rd Party URL Link Name"
          },
          {
            "type": "text",
            "id": "owner",
            "default": "2016",
            "label": "Sauna Space Owner Since"
          },
          {
            "type": "select",
            "id": "category",
            "label": "Review Category",
            "options": [
                {
                "value": "medical",
                "label": "Medical"
                },
                {
                "value": "athletic",
                "label": "Athletic"
                },
                {
                "value": "lifestyle",
                "label": "Lifestyle"
                }
            ]
        },
        {
  "type": "checkbox",
  "id": "featured",
  "label": "Is this a featured review?",
  "default": false
},
        {
  "type": "checkbox",
  "id": "featuredall",
  "label": "Featured review that should by default when 'all' is selected",
  "default": false
}
        ]
      }
    ],
    "presets": [
      {
        "name": "Filtered Reviews",
        "blocks": [
          {
            "type": "review"
          }, {
            "type": "review"
          }
        ]
      }
    ]
  }
{% endschema %}