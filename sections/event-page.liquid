
	<section class="sec1000">

			<div class="event-top">
				<div class="event-top-text">
					<h1 class="et-title">
                        {%- if page.title != blank -%}
                            {{ page.title | escape }}
                        {%- else -%}
                            {{ 'page.title' | t }}
                        {%- endif -%}
                    </h1>
					<div class="et-dates">
                        {% unless page.metafields.start-date.startdate == blank %}
                            <span class="eventStartDate">
                                {{page.metafields.start-date.startdate}}
                            </span>
                        {% endunless %}
                        {% unless page.metafields.end-date.enddate == blank %}
                        - <span class="eventEndDate">{{page.metafields.end-date.enddate}}</span>. 
                        {% endunless %}
                        <span class="eventStartTime">8:00am</span> - <span class="eventEndTime">5:00pm</span></div>
					<div class="et-location etica">
                        {% unless page.metafields.location-name.locationname == blank %}
                            <span class="eventVenue">{{page.metafields.location-name.locationname}}</span><br />
                        {% endunless %}
                        {% unless page.metafields.location-street-addr.locationstreetaddr == blank %}
                            <span class="eventAddress">{{page.metafields.location-street-addr.locationstreetaddr}}</span> 
                        {% endunless %}
                        {% unless page.metafields.location-city.locationcity == blank %}
                            <span class="eventCity">{{page.metafields.location-city.locationcity}}</span> 
                        {% endunless %}
                        {% unless page.metafields.location-state.locationstate == blank %}
                            <span class="eventState">{{page.metafields.location-state.locationstate}}</span> 
                        {% endunless %}
                        {% unless page.metafields.location-zip.locationzip == blank %}
                            <span class="eventZip">{{page.metafields.location-zip.locationzip}}</span>
                        {% endunless %}
                        {% unless page.metafields.location-country.locationcountry == blank %}
                         <span class="eventCountry">{{page.metafields.location-country.locationcountry}}</span> 
                         {% endunless %}
					</div>
				</div>
                {% unless page.metafields.registration-link.registrationlink == blank %}
                    <a href="page.metafields.registration-link.registrationlink" target="_blank" class="et-link">Register</a>
                {% endunless %}
			</div>
			<div class="event-box">
				<div class="event-text">
					<div class="event-title">Event Details</div>
					{{ page.content }}
                    {% unless page.metafields.event-cost.eventcost == blank %}
                        <span class="eventCost">{{page.metafields.event-cost.eventcost}}</span> 
                    {% endunless %}
                    {% unless page.metafields.registration-link.registrationlink == blank %}
                        <div class="event-link-div"><a href="{{page.metafields.registration-link.registrationlink}}" target="_blank" class="event-link">Register <svg xmlns="http://www.w3.org/2000/svg" width="14.759" height="7.753" overflow="visible"><g fill="none" stroke="#000"><path d="M0 3.876h14M10 .376l4 3.5-4 3.5"/></g></svg></a></div>
                    {% endunless %}
                </div>
				<div class="events-img">
                    <img src="{{page.metafields.event-image.eventimage}}" /></div>
			</div>
	</section>
	
	<section class="sec1000">
		<div class="event-back">
			<a href="/pages/events" class="event-link"><svg xmlns="http://www.w3.org/2000/svg" width="14.759" height="7.753" overflow="visible" style="transform: rotate(180deg);"><g fill="none" stroke="#000"><path d="M0 3.876h14M10 .376l4 3.5-4 3.5"/></g></svg> Back to Events</a>
		</div>
	</section>


    {% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
